{
  "description": "Play sounds when Claude needs user attention",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PLUGIN_ROOT/hooks/check_stop_error.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PLUGIN_ROOT/hooks/play_sound.py\" question",
            "timeout": 5
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PLUGIN_ROOT/hooks/play_sound.py\" permission",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
